{
  "name": "pdf-markup",
  "version": "0.1.3",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean && cp -r src/fonts dist/",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch && cp -r src/fonts dist/",
    "test": "vitest run"
  },
  "peerDependencies": {
    "fontkit": "^2.0.4",
    "pdf-lib": "^1.17.1"
  },
  "peerDependenciesMeta": {
    "fontkit": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
